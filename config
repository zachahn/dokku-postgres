#!/usr/bin/env bash

# The directory where plugins, certain data, and general configuration is stored.
# DOKKU_LIB_ROOT=/var/lib/dokku
#
# The top-level directory where plugins are stored.
# PLUGIN_PATH=$DOKKU_LIB_ROOT/plugins"

_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
export BITNAMI_POSTGRES_IMAGE=${BITNAMI_POSTGRES_IMAGE:="$(awk -F '[ :]' '{print $2}' "${_DIR}/Dockerfile")"}
export BITNAMI_POSTGRES_IMAGE_VERSION=${BITNAMI_POSTGRES_IMAGE_VERSION:="$(awk -F '[ :]' '{print $3}' "${_DIR}/Dockerfile")"}
export BITNAMI_POSTGRES_ROOT=${BITNAMI_POSTGRES_ROOT:="$DOKKU_LIB_ROOT/services/bitnami-postgres"}
export DOKKU_LIB_HOST_ROOT=${DOKKU_LIB_HOST_ROOT:=$DOKKU_LIB_ROOT}
export BITNAMI_POSTGRES_HOST_ROOT=${BITNAMI_POSTGRES_HOST_ROOT:="$DOKKU_LIB_HOST_ROOT/services/bitnami-postgres"}

export PLUGIN_UNIMPLEMENTED_SUBCOMMANDS=()
export PLUGIN_COMMAND_PREFIX="bitnami-postgres"
export PLUGIN_CONFIG_ROOT=${PLUGIN_CONFIG_ROOT:="$DOKKU_LIB_ROOT/config/$PLUGIN_COMMAND_PREFIX"}
export PLUGIN_DATA_ROOT=$BITNAMI_POSTGRES_ROOT
export PLUGIN_DATA_HOST_ROOT=$BITNAMI_POSTGRES_HOST_ROOT
export PLUGIN_DATASTORE_PORTS=(5432)
export PLUGIN_DATASTORE_WAIT_PORT=5432
export PLUGIN_DEFAULT_ALIAS="DATABASE"
export PLUGIN_DISABLE_PULL=${BITNAMI_POSTGRES_DISABLE_PULL:=}
export PLUGIN_DISABLE_PULL_VARIABLE="BITNAMI_POSTGRES_DISABLE_PULL"
export PLUGIN_ALT_ALIAS="DOKKU_BITNAMI_POSTGRES"
export PLUGIN_IMAGE=$BITNAMI_POSTGRES_IMAGE
export PLUGIN_IMAGE_VERSION=$BITNAMI_POSTGRES_IMAGE_VERSION
export PLUGIN_SCHEME="postgres"
export PLUGIN_SERVICE="Bitnami Postgres"
export PLUGIN_VARIABLE="BITNAMI_POSTGRES"
export PLUGIN_BASE_PATH="$PLUGIN_PATH"
export PLUGIN_CONFIG_SUFFIX="data"
if [[ -n $DOKKU_API_VERSION ]]; then
  export PLUGIN_BASE_PATH="$PLUGIN_ENABLED_PATH"
fi

export PLUGIN_BUSYBOX_IMAGE=${PLUGIN_BUSYBOX_IMAGE:=busybox:1.37.0-uclibc}
export PLUGIN_AMBASSADOR_IMAGE=${PLUGIN_AMBASSADOR_IMAGE:=dokku/ambassador:0.8.2}
export PLUGIN_S3BACKUP_IMAGE=${PLUGIN_S3BACKUP_IMAGE:=dokku/s3backup:0.18.0}
export PLUGIN_WAIT_IMAGE=${PLUGIN_WAIT_IMAGE:=dokku/wait:0.9.3}

export BITNAMI_POSTGRES_CONFIG_OPTIONS=${BITNAMI_POSTGRES_CONFIG_OPTIONS:=""}
